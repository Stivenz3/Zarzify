rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Función helper para verificar si el usuario es propietario del negocio
    function isOwner(businessId) {
      return request.auth != null && 
             exists(/databases/$(database)/documents/businesses/$(businessId)) &&
             get(/databases/$(database)/documents/businesses/$(businessId)).data.user_id == request.auth.uid;
    }
    
    // Función helper para verificar si el documento pertenece al negocio del usuario
    function belongsToUserBusiness(businessId) {
      return request.auth != null && 
             exists(/databases/$(database)/documents/businesses/$(businessId)) &&
             get(/databases/$(database)/documents/businesses/$(businessId)).data.user_id == request.auth.uid;
    }
    
    // Usuarios - solo pueden acceder a sus propios datos
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Negocios - solo el propietario puede acceder
    match /businesses/{businessId} {
      allow read, write: if isOwner(businessId);
    }
    
    // Productos - solo si pertenecen al negocio del usuario
    match /products/{productId} {
      allow read, write: if request.auth != null && 
        belongsToUserBusiness(resource.data.business_id);
      allow create: if request.auth != null && 
        belongsToUserBusiness(request.resource.data.business_id);
    }
    
    // Categorías - solo si pertenecen al negocio del usuario
    match /categories/{categoryId} {
      allow read, write: if request.auth != null && 
        belongsToUserBusiness(resource.data.business_id);
      allow create: if request.auth != null && 
        belongsToUserBusiness(request.resource.data.business_id);
    }
    
    // Clientes - solo si pertenecen al negocio del usuario
    match /clients/{clientId} {
      allow read, write: if request.auth != null && 
        belongsToUserBusiness(resource.data.business_id);
      allow create: if request.auth != null && 
        belongsToUserBusiness(request.resource.data.business_id);
    }
    
    // Ventas - solo si pertenecen al negocio del usuario
    match /sales/{saleId} {
      allow read, write: if request.auth != null && 
        belongsToUserBusiness(resource.data.business_id);
      allow create: if request.auth != null && 
        belongsToUserBusiness(request.resource.data.business_id);
    }
    
    // Gastos - solo si pertenecen al negocio del usuario
    match /expenses/{expenseId} {
      allow read, write: if request.auth != null && 
        belongsToUserBusiness(resource.data.business_id);
      allow create: if request.auth != null && 
        belongsToUserBusiness(request.resource.data.business_id);
    }
    
    // Empleados - solo si pertenecen al negocio del usuario
    match /employees/{employeeId} {
      allow read, write: if request.auth != null && 
        belongsToUserBusiness(resource.data.business_id);
      allow create: if request.auth != null && 
        belongsToUserBusiness(request.resource.data.business_id);
    }
    
    // Colección de prueba - acceso libre para usuarios autenticados
    match /test/{testId} {
      allow read, write: if request.auth != null;
    }
  }
}
